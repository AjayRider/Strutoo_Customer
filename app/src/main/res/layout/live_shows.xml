<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.strutoocustomer.customer.views.liveshows.LiveShowsVM" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".customer.views.liveshows.LiveShows">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_56sdp"
            android:id="@+id/clToolBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/_10ssp"
                android:background="@drawable/background_round_5_light_grey"
                android:onClick="@{model::onClick}"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:id="@+id/ivSearch"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:onClick="@{model::onClick}"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_search"
                android:layout_marginEnd="@dimen/_10sdp"
                app:layout_constraintBottom_toBottomOf="@+id/ivBack"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/ivBack" />

            <TextView
                android:id="@+id/tvLiveShows"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:fontFamily="@font/dharmagothice_regular"
                android:text="Live Shows"
                android:textColor="@color/black"
                android:textSize="@dimen/_30sdp"
                app:layout_constraintBottom_toBottomOf="@id/ivBack"
                app:layout_constraintStart_toEndOf="@id/ivBack"
                app:layout_constraintTop_toTopOf="@id/ivBack" />


        </androidx.constraintlayout.widget.ConstraintLayout>



        <TextView
            android:id="@+id/tvLiveShowsCl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10ssp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@{model.islive?@drawable/black_bg :@drawable/tab_unselect_bg}"
            android:fontFamily="@font/bw_modelica_medium"
            android:gravity="center_horizontal"
            android:onClick="@{model::onClick}"
            android:padding="@dimen/_10sdp"
            android:text="Live Shows"
            android:textColor="@{model.islive ? @color/white : @color/black}"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintEnd_toStartOf="@id/tvSchedule"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clToolBar" />


        <TextView
            android:id="@+id/tvSchedule"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10ssp"
            android:background="@{model.islive?@drawable/edit_text_background:@drawable/black_bg }"
            android:fontFamily="@font/bw_modelica_medium"
            android:gravity="center_horizontal"
            android:onClick="@{model::onClick}"
            android:padding="@dimen/_10sdp"
            android:text="Schedule"
            android:textColor="@{model.islive ?@color/black :@color/white}"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvLiveShowsCl"
            app:layout_constraintTop_toTopOf="@id/tvLiveShowsCl" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvLiveShows"
            setRecyclerAdapter="@{model.adapterLive}"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvLiveShowsCl"
            app:spanCount="2"
            tools:listitem="@layout/item_layout_liveshows" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>