<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="model"
            type="com.strutoocustomer.customer.recycleradapter.DummyModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="@{(v) -> model.onItemClick.onClick(v,model.adapterPosition,``)}">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/etName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{model.text}"
            android:textAllCaps="true"
            android:layout_marginEnd="@dimen/_4sdp"
            android:fontFamily="@font/bw_modelica_medium"
            android:textSize="@dimen/_10ssp"
            android:paddingStart="@dimen/_20sdp"
            android:paddingEnd="@dimen/_20sdp"
            android:paddingTop="@dimen/_15sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="@dimen/_4sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etName"
            android:background="#e5e5e5"/>

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            app:layout_constraintStart_toStartOf="@id/etName"
            app:layout_constraintEnd_toEndOf="@id/etName"
            app:layout_constraintTop_toBottomOf="@id/etName"
            android:background="@{model.isSelected == true ? @color/_6800f9 : @color/e5e5e5}"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>