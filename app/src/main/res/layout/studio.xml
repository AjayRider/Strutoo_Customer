<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.strutoocustomer.customer.views.studio.StudioVM" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".customer.views.studio.Studio">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clToolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_56sdp"
            android:background="@color/black"
            android:paddingHorizontal="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivSearch"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:onClick="@{model::onClick}"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_search"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:fontFamily="@font/dharmagothic_r"
                android:text="@string/studio"
                android:textColor="@color/white"
                android:textSize="@dimen/_34sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clToolbar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clImageHover"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/ivFirst"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_300sdp"
                        android:onClick="@{model::onClick}"
                        android:scaleType="fitXY"
                        android:src="@drawable/mask_group_3070"
                        app:layout_constraintEnd_toStartOf="@+id/ivSecond"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/ivSecond"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_300sdp"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:onClick="@{model::onClick}"
                        android:scaleType="fitXY"
                        android:src="@drawable/mask_group_3070"
                        app:layout_constraintEnd_toStartOf="@+id/ivThird"
                        app:layout_constraintStart_toEndOf="@+id/ivFirst"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/ivThird"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_300sdp"
                        android:onClick="@{model::onClick}"
                        android:scaleType="fitXY"
                        android:src="@drawable/mask_group_3070"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/ivSecond"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvExpert"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/bw_modelica_medium"
                        android:text="Experts"
                        android:textAllCaps="true"
                        android:textColor="#292d32"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="normal"
                        app:layout_constraintEnd_toEndOf="@+id/ivFirst"
                        app:layout_constraintStart_toStartOf="@+id/ivFirst"
                        app:layout_constraintTop_toBottomOf="@+id/ivFirst" />

                    <TextView
                        android:id="@+id/tvInfluence"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/bw_modelica_medium"
                        android:text="INFLUENCERS"
                        android:textColor="#292d32"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="normal"
                        android:textAllCaps="true"
                        app:layout_constraintStart_toStartOf="@+id/ivSecond"
                        app:layout_constraintTop_toBottomOf="@+id/ivSecond" />

                    <TextView
                        android:id="@+id/tvLiveShow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/bw_modelica_medium"
                        android:text="LIVE SHOWS"
                        android:textColor="#292d32"
                        android:textSize="@dimen/_10ssp"
                        android:textAllCaps="true"
                        android:textStyle="normal"
                        app:layout_constraintStart_toStartOf="@+id/ivThird"
                        app:layout_constraintTop_toBottomOf="@+id/ivThird" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="@dimen/_20sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/clImageHover">

                    <TextView
                        android:id="@+id/tvShop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SHOP"
                        android:textColor="@color/_1d1d1d"
                        android:textSize="@dimen/_20sdp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@+id/viewCyan"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/viewCyan"
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:background="@drawable/circle_cyan"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/tvLearn"
                        app:layout_constraintStart_toEndOf="@+id/tvShop"
                        app:layout_constraintTop_toTopOf="parent" />


                    <TextView
                        android:id="@+id/tvLearn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LEARN"
                        android:textColor="@color/_1d1d1d"
                        android:textSize="@dimen/_20sdp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@+id/viewTorchRed"
                        app:layout_constraintStart_toEndOf="@+id/viewCyan"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/viewTorchRed"
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:background="@drawable/circle_torch_red"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/tvDiscover"
                        app:layout_constraintStart_toEndOf="@+id/tvLearn"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvDiscover"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DISCOVER"
                        android:textColor="@color/_1d1d1d"
                        android:textSize="@dimen/_20sdp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/viewTorchRed"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>


        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>