<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="model"
            type="com.strutoocustomer.customer.recycleradapter.DummyModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutArtist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:padding="@dimen/_1sdp"
        android:background="@drawable/sharp_stroke"
        android:backgroundTint="@color/black"
        android:onClick="@{(v)->model.onItemClick.onClick(v, model.adapterPosition, `all`)}">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivExpertPhoto"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:scaleType="fitXY"
            android:src="@drawable/blac_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvExpert"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/_00f474"
            android:fontFamily="@font/bw_modelica_medium"
            android:gravity="center_horizontal"
            android:padding="@dimen/_5sdp"
            android:text="DINA"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="@id/ivExpertPhoto"
            app:layout_constraintStart_toStartOf="@id/ivExpertPhoto"
            app:layout_constraintTop_toBottomOf="@id/ivExpertPhoto" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>