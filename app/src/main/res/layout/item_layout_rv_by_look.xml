<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="model"
            type="com.strutoocustomer.customer.recycleradapter.DummyModel" />

    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clItem"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivShoppinBag"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:background="@color/_1d1d1d"
                android:foregroundGravity="bottom"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:src="@drawable/shoppingbag"
                app:layout_constraintBottom_toTopOf="@id/tvShopAll"
                app:layout_constraintStart_toStartOf="@id/clItem"
                app:layout_constraintTop_toTopOf="@id/clItem" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvShopAll"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/_1d1d1d"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/_5sdp"
                android:text="Shop\nAll"
                android:textColor="@color/white"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="@id/clItem"
                app:layout_constraintEnd_toEndOf="@id/ivShoppinBag"
                app:layout_constraintStart_toStartOf="@id/clItem"
                app:layout_constraintTop_toBottomOf="@id/ivShoppinBag" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivProduct"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:scaleType="fitXY"
                android:src="@drawable/joyride"
                app:layout_constraintBottom_toBottomOf="@id/clItem"
                app:layout_constraintStart_toEndOf="@id/tvShopAll"
                app:layout_constraintTop_toTopOf="@id/clItem" />

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/cbProductCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:button="@drawable/cb_selector"
                android:elevation="@dimen/_5sdp"
                android:gravity="top"
                app:layout_constraintStart_toStartOf="@id/ivProduct"
                app:layout_constraintTop_toTopOf="@id/ivProduct" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/bw_modelica_medium"
                android:text="Creamy Lipshade"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintStart_toEndOf="@id/ivProduct"
                app:layout_constraintTop_toTopOf="@id/ivProduct" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/bw_modelica_bold"
                android:text="EGP 67.00"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintStart_toStartOf="@id/tvProductName"
                app:layout_constraintTop_toBottomOf="@id/tvProductName" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:drawableEnd="@drawable/star"
                android:drawablePadding="@dimen/_5sdp"
                android:fontFamily="@font/bw_modelica"
                android:text="4.8"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintStart_toStartOf="@id/tvProductName"
                app:layout_constraintTop_toBottomOf="@id/tvPrice" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDiscountPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10sdp"
                android:fontFamily="@font/bw_modelica_medium"
                android:text="60% OFF"
                android:textColor="#ff4180"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintBottom_toBottomOf="@id/tvRating"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvRating" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>
</layout>