<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.strutoocustomer.customer.views.shopproductdetails.ShopProductDetailsVM" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".customer.views.shopproductdetails.ShopProductDetails">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivBack"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@drawable/background_round_5_light_grey"
                    android:elevation="@dimen/_10sdp"
                    android:onClick="@{vm::onClick}"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_back"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/vpProductImages"
                    setViewPagerAdapter="@{vm.bannerAdapter}"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_180sdp"
                    android:layout_marginVertical="@dimen/_5sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/black"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:paddingVertical="@dimen/_2sdp"
                    android:text="20% Off"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_8ssp"
                    android:textStyle="normal"
                    app:layout_constraintStart_toStartOf="@+id/ivBack"
                    app:layout_constraintTop_toBottomOf="@+id/ivBack" />

                <com.tbuonomo.viewpagerdotsindicator.SpringDotsIndicator
                    android:id="@+id/indicator"
                    addIndicator="@{vpProductImages}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    app:dampingRatio="0.5"
                    app:dotsColor="@color/black"
                    app:dotsCornerRadius="10dp"
                    app:dotsSize="12dp"
                    app:dotsSpacing="6dp"
                    app:dotsStrokeColor="@color/grey"
                    app:dotsStrokeWidth="2dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/vpProductImages"
                    app:stiffness="300" />
                <!--                addIndicator="@{vpProductImages}"-->


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:elevation="@dimen/_10sdp"
                    android:orientation="vertical"
                    android:padding="@dimen/_5sdp"
                    app:layout_constraintBottom_toBottomOf="@+id/vpProductImages"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/vpProductImages">

                    <ImageView
                        android:id="@+id/ivCart"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:elevation="@dimen/_5sdp"
                        android:onClick="@{vm::onClick}"
                        android:src="@drawable/ic_cart_black" />

                    <ImageView
                        android:id="@+id/ivHeart"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:elevation="@dimen/_5sdp"
                        android:src="@drawable/heart_filled" />

                    <ImageView
                        android:id="@+id/ivTry"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="center_horizontal"
                        android:elevation="@dimen/_5sdp"
                        android:onClick="@{vm::onClick}"
                        android:src="@drawable/ic_camera" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:gravity="center"
                        android:text="Try On" />

                    <ImageView
                        android:id="@+id/ivShare"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:elevation="@dimen/_5sdp"
                        android:src="@drawable/ic_share" />


                </LinearLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvProductNameMO"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:fontFamily="@font/bw_modelica_bold"
                    android:text="M.A.C PREP Primer"
                    android:textColor="@color/_1d1d1d"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/indicator" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:drawableEnd="@drawable/star"
                    android:drawablePadding="@dimen/_5sdp"
                    android:fontFamily="@font/bw_modelica_medium"
                    android:text="4.8"
                    android:textColor="@color/_1d1d1d"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tvProductNameMO" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvCurrentPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_10sdp"
                    android:fontFamily="@font/bw_modelica_bold"
                    android:text="EGP 67.70"
                    android:textColor="@color/_1d1d1d"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/tvProductNameMO"
                    app:layout_constraintTop_toBottomOf="@+id/tvProductNameMO" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvActualPrice"
                    crossText="@{true}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:fontFamily="@font/bw_modelica_medium"
                    android:text="EGP 77.00"
                    android:textColor="@color/_9d9d9d"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toBottomOf="@+id/tvCurrentPrice"
                    app:layout_constraintStart_toEndOf="@+id/tvCurrentPrice"
                    app:layout_constraintTop_toTopOf="@+id/tvCurrentPrice" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvReviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:fontFamily="@font/bw_modelica_medium"
                    android:text="@string/reviews"
                    android:textColor="@color/_272c3f"
                    android:textSize="@dimen/_8sdp"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toBottomOf="@+id/tvActualPrice"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tvActualPrice" />


                <View
                    android:id="@+id/viewBelowDelivery"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:background="@drawable/ic_dash_view"
                    app:layout_constraintEnd_toEndOf="@+id/tvReviews"
                    app:layout_constraintStart_toStartOf="@+id/tvReviews"
                    app:layout_constraintTop_toBottomOf="@+id/tvReviews" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvTaxes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_10sdp"
                    android:fontFamily="@font/bw_modelica_medium"
                    android:text="+ 0.25 Taxes"
                    android:textColor="@color/_9d9d9d"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="normal"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="@+id/tvCurrentPrice"
                    app:layout_constraintTop_toBottomOf="@+id/tvCurrentPrice" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvShades"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:fontFamily="@font/bw_modelica_medium"
                    android:text="10 Shades Available"
                    android:textAllCaps="true"
                    android:textColor="@color/_1d1d1d"
                    android:textSize="@dimen/_11sdp"
                    app:layout_constraintStart_toStartOf="@+id/tvTaxes"
                    app:layout_constraintTop_toBottomOf="@+id/tvTaxes" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvShades"
                    setRecyclerAdapter="@{vm.adapterShades}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvShades"
                    app:spanCount="2"
                    tools:itemCount="15"
                    tools:listitem="@layout/item_shades" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvSizes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_10sdp"
                    android:fontFamily="@font/bw_modelica_medium"
                    android:text="Available Sizes"
                    android:textAllCaps="true"
                    android:textColor="@color/_1d1d1d"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="normal"
                    app:layout_constraintStart_toStartOf="@+id/tvTaxes"
                    app:layout_constraintTop_toBottomOf="@+id/rvShades" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvSizes"
                    setRecyclerAdapter="@{vm.adapterSizes}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:layout_marginVertical="@dimen/_10sdp"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.461"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvSizes"
                    app:spanCount="2"
                    tools:itemCount="30"
                    tools:listitem="@layout/item_sizes" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvDescriptionTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_10sdp"
                    android:fontFamily="@font/bw_modelica_medium"
                    android:text="Description"
                    android:textColor="@color/_1d1d1d"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="normal"
                    app:layout_constraintStart_toStartOf="@+id/tvTaxes"
                    app:layout_constraintTop_toBottomOf="@+id/rvSizes"
                    app:textAllCaps="true" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:fontFamily="@font/bw_modelica"
                    android:text="Your customised Vedix products are rich in over 40 natural herbs like Bhringraj, Aloe Vera, Amla, Onion, etc which help provide holistic care to your Face."
                    android:textColor="@color/_9d9d9d"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="normal"
                    app:layout_constraintStart_toStartOf="@+id/tvTaxes"
                    app:layout_constraintTop_toBottomOf="@+id/tvDescriptionTitle" />


                <View
                    android:id="@+id/viewBelowDescription"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/_f8f8f8"
                    app:layout_constraintTop_toBottomOf="@+id/tvDescription" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvProductAbout"
                    setRecyclerAdapter="@{vm.adapterBenefits}"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintTop_toBottomOf="@id/viewBelowDescription"
                    tools:itemCount="5"
                    tools:listitem="@layout/item_product_about_main" />

                <TextView
                    android:id="@+id/tvSimilar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/bw_modelica_medium"
                    android:text="Similar products"
                    android:textAllCaps="true"
                    android:textColor="@color/_1d1d1d"
                    android:textSize="@dimen/_11sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rvProductAbout" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvSimilar"
                    setRecyclerAdapter="@{vm.similarAdapter}"
                    android:layout_width="match_parent"
                    android:scrollIndicators="none"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvSimilar"
                    tools:listitem="@layout/item_layout_similar_product" />

                <TextView
                    android:id="@+id/tvDiscover"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/bw_modelica_medium"
                    android:text="Discover more"
                    android:textAllCaps="true"
                    android:textColor="@color/_1d1d1d"
                    android:textSize="@dimen/_11sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rvSimilar" />

                <View
                    android:id="@+id/view"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:background="#e5e5e5"
                    app:layout_constraintBottom_toBottomOf="@+id/tvDiscover"
                    app:layout_constraintEnd_toStartOf="@+id/tvSeeAll"
                    app:layout_constraintStart_toEndOf="@+id/tvDiscover"
                    app:layout_constraintTop_toTopOf="@+id/tvDiscover" />

                <TextView
                    android:id="@+id/tvSeeAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:fontFamily="@font/bw_modelica_medium"
                    android:text="See All"
                    android:textColor="@color/_1d1d1d"
                    android:textSize="@dimen/_9sdp"
                    app:layout_constraintBottom_toBottomOf="@+id/tvDiscover"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/view"
                    app:layout_constraintTop_toTopOf="@+id/tvDiscover" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvArrival"
                    setRecyclerAdapter="@{vm.discoverAdapter}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:layout_marginTop="10dp"
                    android:scrollIndicators="none"
                    android:layout_marginBottom="@dimen/_60sdp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvDiscover"
                    tools:listitem="@layout/item_layout_similar_product" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/layoutPay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:elevation="@dimen/_10sdp"
            android:onClick="@{vm::onClick}"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/_f6f6f6"
                android:fontFamily="@font/bw_modelica_bold"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/search_stroke"
                android:text="EGP 115.00"
                android:textColor="@color/_111111"
                android:textSize="@dimen/_12sdp"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/search_stroke"
                android:backgroundTint="@color/_111111"
                android:fontFamily="@font/bw_modelica_medium"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:text="Add to Bag"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                 />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>