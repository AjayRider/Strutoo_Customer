<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:attrs="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.strutoocustomer.customer.views.home.HomeVM" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".customer.views.home.Home">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clToolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_56sdp"
            android:background="@color/black"
            android:paddingHorizontal="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivDrawer"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:onClick="@{model::onClick}"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_drawer_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/tvLogo"
                android:layout_width="@dimen/_38sdp"
                android:layout_height="@dimen/_38sdp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_logo"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tvNameApp"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvNameApp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_7sdp"
                android:fontFamily="@font/dharmagothice_regular"
                android:text="STRUTOO"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textSize="@dimen/_30sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvLogo"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/logo_text_only"
                android:layout_margin="@dimen/_7sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:id="@+id/ivCart"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:onClick="@{model::onClick}"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_cart"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clToolbar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/glStart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.03" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/glEnd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.96" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/bw_modelica_bold"
                    android:text="Hello,Simran"
                    android:textColor="@color/_1d1d1d"
                    android:textSize="@dimen/_20sdp"
                    app:layout_constraintStart_toStartOf="@+id/glStart"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/bw_modelica_medium"
                    android:text="Explore the Best Product &amp; Service"
                    android:textColor="@color/_949494"
                    android:textSize="@dimen/_10sdp"
                    app:layout_constraintStart_toStartOf="@+id/glStart"
                    app:layout_constraintTop_toBottomOf="@+id/tvName" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clSearch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/sharp_stroke"
                    android:onClick="@{model::onClick}"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:paddingVertical="@dimen/_8sdp"
                    app:layout_constraintEnd_toEndOf="@+id/glEnd"
                    app:layout_constraintStart_toStartOf="@+id/glStart"
                    app:layout_constraintTop_toBottomOf="@+id/tvDesc">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_search"
                        android:drawablePadding="@dimen/_7sdp"
                        android:fontFamily="@font/bw_modelica"
                        android:gravity="center"
                        android:text="Search from Strutoo"
                        android:textColor="#1d1d1d"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/tvScanner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="@{model::onClick}"
                        android:src="@drawable/ic_scanner"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvService"
                    setRecyclerAdapter="@{model.serviceAdapter}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="@+id/clSearch"
                    app:layout_constraintStart_toStartOf="@+id/clSearch"
                    app:layout_constraintTop_toBottomOf="@+id/clSearch"
                    tools:listitem="@layout/item_layout_service_type" />

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/vpBanner"
                    setViewPagerAdapter="@{model.bannerAdapter}"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_125sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="@+id/glEnd"
                    app:layout_constraintStart_toStartOf="@+id/glStart"
                    app:layout_constraintTop_toBottomOf="@+id/rvService" />

                <com.tbuonomo.viewpagerdotsindicator.SpringDotsIndicator
                    android:id="@+id/dotIndicator"
                    addIndicator="@{vpBanner}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:dampingRatio="0.5"
                    app:dotsColor="@color/black"
                    app:dotsCornerRadius="5dp"
                    app:dotsSize="10dp"
                    app:dotsSpacing="4dp"
                    app:dotsStrokeColor="@color/grey"
                    app:dotsStrokeWidth="2dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/vpBanner"
                    app:stiffness="300" />
                <!--                selectedPosition="@{model.selectedPosition}"-->
                <!--                setColorTint="@{model.colorCode}"-->
                <!--                totalDotCount="@{model.totalDotCount}"-->

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvStudio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/bw_modelica_medium"
                    android:text="STUDIO"
                    android:textColor="@color/_1d1d1d"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="normal"
                    app:layout_constraintStart_toStartOf="@id/glStart"
                    app:layout_constraintTop_toBottomOf="@+id/dotIndicator" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:background="#e5e5e5"
                    app:layout_constraintBottom_toBottomOf="@+id/tvStudio"
                    app:layout_constraintEnd_toEndOf="@+id/glEnd"
                    app:layout_constraintStart_toEndOf="@+id/tvStudio"
                    app:layout_constraintTop_toTopOf="@+id/tvStudio" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvStudio"
                    setRecyclerAdapter="@{model.studioAdapter}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:nestedScrollingEnabled="false"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:layout_constraintEnd_toEndOf="@id/glEnd"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvStudio"
                    app:spanCount="3"
                    attrs:itemCount="6"
                    tools:listitem="@layout/item_layout_studio" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvBrands"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/bw_modelica_medium"
                    android:text="TOP BRANDS"
                    android:textColor="@color/_1d1d1d"
                    android:textSize="@dimen/_11sdp"
                    app:layout_constraintStart_toStartOf="@id/glStart"
                    app:layout_constraintTop_toBottomOf="@+id/rvStudio" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:background="#e5e5e5"
                    app:layout_constraintBottom_toBottomOf="@+id/tvBrands"
                    app:layout_constraintEnd_toEndOf="@+id/glEnd"
                    app:layout_constraintStart_toEndOf="@+id/tvBrands"
                    app:layout_constraintTop_toTopOf="@+id/tvBrands" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvBrand"
                    setRecyclerAdapter="@{model.brandAdapter}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/glStart"
                    app:layout_constraintTop_toBottomOf="@+id/tvBrands"
                    tools:listitem="@layout/item_layout_brands" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvSalon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/bw_modelica_medium"
                    android:text="TOP SALONS"
                    android:textColor="@color/_1d1d1d"
                    android:textSize="@dimen/_11sdp"
                    app:layout_constraintStart_toStartOf="@id/glStart"
                    app:layout_constraintTop_toBottomOf="@+id/rvBrand" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:background="#e5e5e5"
                    app:layout_constraintBottom_toBottomOf="@+id/tvSalon"
                    app:layout_constraintEnd_toEndOf="@+id/glEnd"
                    app:layout_constraintStart_toEndOf="@+id/tvSalon"
                    app:layout_constraintTop_toTopOf="@+id/tvSalon" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvSalon"
                    setRecyclerAdapter="@{model.salonAdapter}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/tvStudio"
                    app:layout_constraintTop_toBottomOf="@+id/tvSalon"
                    tools:listitem="@layout/item_layout_salons" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvStore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/bw_modelica_medium"
                    android:text="BRAG STORE"
                    android:textColor="#1d1d1d"
                    android:textSize="@dimen/_11sdp"

                    app:layout_constraintStart_toStartOf="@id/glStart"
                    app:layout_constraintTop_toBottomOf="@+id/rvSalon" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:background="#e5e5e5"
                    app:layout_constraintBottom_toBottomOf="@+id/tvStore"
                    app:layout_constraintEnd_toEndOf="@+id/glEnd"
                    app:layout_constraintStart_toEndOf="@+id/tvStore"
                    app:layout_constraintTop_toTopOf="@+id/tvStore" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvStore"
                    setRecyclerAdapter="@{model.storeAdapter}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:layout_marginTop="12dp"
                    android:nestedScrollingEnabled="false"
                    app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
                    app:layout_constraintEnd_toEndOf="@+id/glEnd"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvStore"
                    attrs:itemCount="2"
                    tools:listitem="@layout/item_layout_store" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvSeller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/bw_modelica_medium"
                    android:text="BEST SELLER"
                    android:textColor="@color/_1d1d1d"
                    android:textSize="@dimen/_11sdp"
                    app:layout_constraintStart_toStartOf="@id/glStart"
                    app:layout_constraintTop_toBottomOf="@+id/rvStore" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:background="#e5e5e5"
                    app:layout_constraintBottom_toBottomOf="@+id/tvSeller"
                    app:layout_constraintEnd_toEndOf="@+id/glEnd"
                    app:layout_constraintStart_toEndOf="@+id/tvSeller"
                    app:layout_constraintTop_toTopOf="@+id/tvSeller" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvSeller"
                    setRecyclerAdapter="@{model.sellerAdapter}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_1sdp"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="@+id/glEnd"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvSeller"
                    tools:listitem="@layout/item_layout_seller" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvLooks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/bw_modelica_medium"
                    android:text="Top Looks"
                    android:textAllCaps="true"
                    android:textColor="@color/_1d1d1d"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="normal"
                    app:layout_constraintStart_toStartOf="@id/glStart"
                    app:layout_constraintTop_toBottomOf="@+id/rvSeller" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:background="#e5e5e5"
                    app:layout_constraintBottom_toBottomOf="@+id/tvLooks"
                    app:layout_constraintEnd_toEndOf="@+id/glEnd"
                    app:layout_constraintStart_toEndOf="@+id/tvLooks"
                    app:layout_constraintTop_toTopOf="@+id/tvLooks" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvLook"
                    setRecyclerAdapter="@{model.looksAdapter}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="@+id/glEnd"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvLooks"
                    tools:listitem="@layout/item_layout_looks" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvSale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/bw_modelica_medium"
                    android:text="Clearance Sale"
                    android:textAllCaps="true"
                    android:textColor="@color/_1d1d1d"
                    android:textSize="@dimen/_11sdp"
                    app:layout_constraintStart_toStartOf="@id/glStart"
                    app:layout_constraintTop_toBottomOf="@+id/rvLook" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:background="#e5e5e5"
                    app:layout_constraintBottom_toBottomOf="@+id/tvSale"
                    app:layout_constraintEnd_toEndOf="@+id/glEnd"
                    app:layout_constraintStart_toEndOf="@+id/tvSale"
                    app:layout_constraintTop_toTopOf="@+id/tvSale" />

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/vpSale"
                    setViewPagerAdapter="@{model.clearanceAdapter}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintEnd_toEndOf="@+id/glEnd"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvSale" />

                <com.tbuonomo.viewpagerdotsindicator.SpringDotsIndicator
                    android:id="@+id/dotIndicatorSell"
                    addIndicator="@{vpSale}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:dampingRatio="0.5"
                    app:dotsColor="@color/black"
                    app:dotsCornerRadius="5dp"
                    app:dotsSize="10dp"
                    app:dotsSpacing="4dp"
                    app:dotsStrokeColor="@color/grey"
                    app:dotsStrokeWidth="2dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/vpSale"
                    app:stiffness="300" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvOffers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/bw_modelica_medium"
                    android:text="TOP OFFERS"
                    android:textColor="@color/_1d1d1d"
                    android:textSize="@dimen/_11sdp"
                    app:layout_constraintStart_toStartOf="@id/glStart"
                    app:layout_constraintTop_toBottomOf="@+id/dotIndicatorSell" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:background="#e5e5e5"
                    app:layout_constraintBottom_toBottomOf="@+id/tvOffers"
                    app:layout_constraintEnd_toEndOf="@+id/glEnd"
                    app:layout_constraintStart_toEndOf="@+id/tvOffers"
                    app:layout_constraintTop_toTopOf="@+id/tvOffers" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvOffer"
                    setRecyclerAdapter="@{model.offersAdapter}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="@+id/glEnd"
                    app:layout_constraintStart_toStartOf="@id/glStart"
                    app:layout_constraintTop_toBottomOf="@+id/tvOffers"
                    tools:listitem="@layout/item_layout_offers" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvArrivals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/bw_modelica_medium"
                    android:text="New Arrivals"
                    android:textAllCaps="true"
                    android:textColor="@color/_1d1d1d"
                    android:textSize="@dimen/_11sdp"
                    app:layout_constraintStart_toStartOf="@id/glStart"
                    app:layout_constraintTop_toBottomOf="@+id/rvOffer" />

                <View
                    android:id="@+id/view"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:background="#e5e5e5"
                    app:layout_constraintBottom_toBottomOf="@+id/tvArrivals"
                    app:layout_constraintEnd_toStartOf="@+id/tvSeeAll"
                    app:layout_constraintStart_toEndOf="@+id/tvArrivals"
                    app:layout_constraintTop_toTopOf="@+id/tvArrivals" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvSeeAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bw_modelica_medium"
                    android:text="See All"
                    android:textColor="#1d1d1d"
                    android:textSize="@dimen/_9sdp"
                    app:layout_constraintBottom_toBottomOf="@+id/tvArrivals"
                    app:layout_constraintEnd_toEndOf="@+id/glEnd"
                    app:layout_constraintStart_toEndOf="@+id/view"
                    app:layout_constraintTop_toTopOf="@+id/tvArrivals" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvArrival"
                    setRecyclerAdapter="@{model.arrivalAdapter}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/glEnd"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvArrivals"
                    tools:listitem="@layout/item_layout_arrival" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>