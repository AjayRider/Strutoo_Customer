<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="model"
            type="com.strutoocustomer.customer.models.ChatItemModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2sdp"
        android:background="@color/transparent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvMessageTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bw_modelica"
            android:text="@{model.time}"
            android:visibility="@{model.time.equals(``)?View.GONE:View.VISIBLE}"
            android:textColor="@color/_acb1c0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="13sp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cclMessageMe"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_30sdp"
            app:layout_constraintTop_toBottomOf="@id/tvMessageTime"
            android:visibility="@{`1`.equals(model.myIdentification) ? View.VISIBLE : View.GONE}"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:id="@+id/clBaseMe"
                android:background="@drawable/chat_round_me_bg"
                android:backgroundTint="@color/app_color"
                android:padding="@dimen/_10sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvMessageMe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bw_modelica"
                    android:textColorHint="@color/app_color"
                    android:text="@{model.text}"
                    android:paddingEnd="@dimen/_5sdp"
                    android:paddingStart="@dimen/_20sdp"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:textSize="13sp" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_25sdp"
                app:srcCompat="@drawable/levels"
                android:rotationX="180"
                android:translationY="-10dp"
                android:tint="@color/app_color"
                app:layout_constraintTop_toBottomOf="@id/clBaseMe"
                app:layout_constraintEnd_toEndOf="@id/clBaseMe"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
<!--new -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cclMessageThey"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="@dimen/_30sdp"
            android:visibility="@{`2`.equals(model.myIdentification) ? View.VISIBLE : View.GONE}"
            app:layout_constraintTop_toBottomOf="@id/tvMessageTime">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cclMessageTheyIn"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:background="@drawable/chat_round_they_bs"
                android:padding="@dimen/_10sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvMessageThey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/_20sdp"
                    android:paddingStart="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:fontFamily="@font/bw_modelica"
                    android:text="@{model.text}"
                    android:textColor="@color/_222b45"
                    android:textColorHint="@color/_222b45"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_25sdp"
                app:srcCompat="@drawable/levels"
                android:rotationX="180"
                android:rotationY="180"
                android:translationY="-10dp"
                android:tint="@color/they"
                app:layout_constraintTop_toBottomOf="@id/cclMessageTheyIn"
                app:layout_constraintStart_toStartOf="@id/cclMessageTheyIn"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>