    <data>
        <variable
            name="model"
            type="com.strutoocustomer.customer.recycleradapter.DummyModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvBenefit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/circle_black_dot"
            android:drawablePadding="@dimen/_5sdp"
            android:fontFamily="@font/bw_modelica"
            android:paddingVertical="@dimen/_5sdp"
            android:text="Step 1: Take some compact on a powder puff"
            android:textColor="@color/_111111"
            android:textSize="12sp"
            android:textStyle="normal"
            app:layout_constraintTop_toTopOf="parent" />

