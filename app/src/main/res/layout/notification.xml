<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="model"
            type="com.strutoocustomer.customer.views.notification.NotificationVM" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".customer.views.notification.Notification">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clToolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_56sdp"
            android:background="@color/black"
            android:paddingHorizontal="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_back_white"
                android:id="@+id/ivBack"
                android:onClick="@{model::onClick}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notifications"
                android:textColor="@color/white"
                android:textStyle="normal"
                android:textAllCaps="true"
                android:fontFamily="@font/dharmagothice_regular"
                android:letterSpacing="0.04"
                android:layout_marginStart="@dimen/_10sdp"
                app:layout_constraintStart_toEndOf="@+id/ivBack"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textSize="@dimen/_30sdp"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RECENT"
            android:padding="@dimen/_5sdp"
            android:id="@+id/tvRecent"
            android:textStyle="normal"
            android:letterSpacing="-0.05"
            android:fontFamily="@font/bw_modelica_bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clToolbar"
            android:layout_margin="@dimen/_10sdp"
            android:textSize="@dimen/_10ssp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear All"
            android:id="@+id/tvClear"
            android:padding="@dimen/_5sdp"
            android:textAllCaps="true"
            android:textStyle="normal"
            android:textColor="#56e9f3"
            android:letterSpacing="-0.05"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/bw_modelica_bold"
            app:layout_constraintTop_toBottomOf="@+id/clToolbar"
            android:layout_margin="@dimen/_10sdp"
            android:textSize="@dimen/_10ssp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            setRecyclerAdapter="@{model.recentAdapter}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="vertical"
            tools:itemCount="2"
            android:id="@+id/rvRecent"
            tools:listitem="@layout/item_recent_notification"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvRecent"
            android:layout_marginTop="@dimen/_5sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Older notification"
            android:padding="@dimen/_5sdp"
            android:id="@+id/tvOld"
            android:textStyle="normal"
            android:textAllCaps="true"
            android:letterSpacing="-0.05"
            android:fontFamily="@font/bw_modelica_bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rvRecent"
            android:layout_margin="@dimen/_10sdp"
            android:textSize="@dimen/_10ssp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            setRecyclerAdapter="@{model.oldAdapter}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="vertical"
            tools:itemCount="2"
            android:id="@+id/rvOld"
            tools:listitem="@layout/item_old_notification"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvOld"
            android:layout_marginTop="@dimen/_5sdp"/>




    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>