<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.strutoocustomer.customer.views.addaddress.TabType" />

        <variable
            name="model"
            type="com.strutoocustomer.customer.views.addaddress.AddAddressVM" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".customer.views.addaddress.AddAddress">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clToolbarAddAddress"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_56sdp"
            android:background="@color/black"
            android:paddingHorizontal="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivBack"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:onClick="@{model::onClick}"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_back_white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:fontFamily="@font/dharmagothice_regular"
                android:text="Add Address"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_30sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ivBack"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/clToolbarAddAddress">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp">

                <fragment
                    android:id="@+id/frameMapAddress"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_220sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivCurrentLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/gps"
                    app:layout_constraintBottom_toBottomOf="@id/frameMapAddress"
                    app:layout_constraintEnd_toEndOf="@+id/frameMapAddress" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tabHome"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@{model.tabType == TabType.Home? @drawable/black_button : @drawable/sharp_stroke}"
                    android:drawableStart="@{model.tabType == TabType.Home?@drawable/ic_home_selected:@drawable/ic_home_unselected}"
                    android:onClick="@{model::onClick}"
                    android:paddingHorizontal="@dimen/_15sdp"
                    android:paddingVertical="@dimen/_7sdp"
                    android:text="Home"
                    android:textAlignment="center"
                    android:textColor="@{model.tabType == TabType.Home ? @color/white : @color/_9d9d9d}"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toTopOf="@id/tlBuildingNumber"
                    app:layout_constraintEnd_toStartOf="@id/tabWork"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/frameMapAddress" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tabWork"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@{model.tabType == TabType.Work? @drawable/black_button : @drawable/sharp_stroke}"
                    android:drawableStart="@{model.tabType == TabType.Work?@drawable/ic_work_selected:@drawable/ic_work_unselected}"
                    android:onClick="@{model::onClick}"
                    android:paddingHorizontal="@dimen/_15sdp"
                    android:paddingVertical="@dimen/_7sdp"
                    android:text="Work"
                    android:textAlignment="center"
                    android:textColor="@{model.tabType == TabType.Work ? @color/white : @color/_9d9d9d}"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tabHome"
                    app:layout_constraintEnd_toStartOf="@id/tabOther"
                    app:layout_constraintStart_toEndOf="@id/tabHome"
                    app:layout_constraintTop_toBottomOf="@id/frameMapAddress" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tabOther"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@{model.tabType == TabType.Other? @drawable/black_button : @drawable/sharp_stroke}"
                    android:drawableStart="@{model.tabType == TabType.Other?@drawable/ic_location_selected:@drawable/ic_location_unselected}"
                    android:onClick="@{model::onClick}"
                    android:paddingHorizontal="@dimen/_15sdp"
                    android:paddingVertical="@dimen/_7sdp"
                    android:text="Other"
                    android:textAlignment="center"
                    android:textColor="@{model.tabType == TabType.Other ? @color/white : @color/_9d9d9d}"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tabHome"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tabWork"
                    app:layout_constraintTop_toBottomOf="@id/frameMapAddress" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/tlBuildingNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/search_stroke"
                    android:fontFamily="@font/bw_modelica_medium"
                    android:hint="@string/building_number"
                    android:maxLines="1"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:paddingVertical="@dimen/_12sdp"
                    android:textSize="@dimen/_11sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tabHome" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/tlApartmentNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/search_stroke"
                    android:fontFamily="@font/bw_modelica_medium"
                    android:hint="@string/apartment_number"
                    android:maxLines="1"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:paddingVertical="@dimen/_12sdp"
                    android:textSize="@dimen/_11sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tlBuildingNumber" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/search_stroke"
                    android:drawableEnd="@drawable/ic_drop_down"
                    android:fontFamily="@font/bw_modelica_medium"
                    android:hint="@string/city"
                    android:maxLines="1"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:paddingVertical="@dimen/_12sdp"
                    android:textSize="@dimen/_11sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tlApartmentNumber" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etRegion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/search_stroke"
                    android:drawableEnd="@drawable/ic_drop_down"
                    android:fontFamily="@font/bw_modelica_medium"
                    android:hint="@string/region"
                    android:maxLines="1"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:paddingVertical="@dimen/_12sdp"
                    android:textSize="@dimen/_11sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/etCity" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/search_stroke"
                    android:fontFamily="@font/bw_modelica_medium"
                    android:hint="@string/area"
                    android:maxLines="1"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:paddingVertical="@dimen/_12sdp"
                    android:textSize="@dimen/_11sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/etRegion" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etCompound"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/search_stroke"
                    android:fontFamily="@font/bw_modelica_medium"
                    android:hint="@string/compound"
                    android:maxLines="1"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:paddingVertical="@dimen/_12sdp"
                    android:textSize="@dimen/_11sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/etArea" />

                <Button
                    android:id="@+id/btnAddAddress"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@drawable/search_stroke"
                    android:fontFamily="@font/bw_modelica_medium"
                    android:onClick="@{model::onClick}"
                    android:padding="@dimen/_7sdp"
                    android:text="Add"
                    android:letterSpacing="0.0"
                    android:textAllCaps="false"
                    android:textSize="@dimen/_12sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/etCompound" />

                <ImageView
                    android:id="@+id/ivBackground"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:src="@drawable/background_streets"
                    app:layout_constraintBottom_toBottomOf="@id/btnAddAddress"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/etRegion" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
