<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.strutoocustomer.customer.views.addcard.AddCardVM" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".customer.views.addcard.AddCard">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clToolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_56sdp"
            android:background="@color/black"
            android:paddingHorizontal="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:onClick="@{model::onClick}"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_back_white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:fontFamily="@font/dharmagothice_regular"
                android:text="ADD CARD"
                android:textColor="@color/white"
                android:textSize="@dimen/_30sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ivBack"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clToolbar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/search_stroke"
                android:padding="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <EditText
                    android:id="@+id/etCardNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:background="@android:color/transparent"
                    android:cursorVisible="false"
                    android:fontFamily="@font/bw_modelica_medium"
                    android:hint="Card number*"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textColor="@color/_111111"
                    android:textSize="@dimen/_12sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivAmerican"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/american"
                    app:layout_constraintBottom_toBottomOf="@id/etCardNo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/etCardNo" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivMasterCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:src="@drawable/master"
                    app:layout_constraintBottom_toBottomOf="@id/etCardNo"
                    app:layout_constraintEnd_toStartOf="@id/ivAmerican"
                    app:layout_constraintTop_toTopOf="@id/etCardNo" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivVisa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:src="@drawable/visa"
                    app:layout_constraintBottom_toBottomOf="@id/etCardNo"
                    app:layout_constraintEnd_toStartOf="@id/ivMasterCard"
                    app:layout_constraintTop_toTopOf="@id/etCardNo" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etExpiry"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:background="@drawable/search_stroke"
                android:cursorVisible="false"
                android:fontFamily="@font/bw_modelica_medium"
                android:hint="@string/expiry_date"
                android:inputType="date"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/_111111"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintEnd_toStartOf="@id/etCvv"
                app:layout_constraintStart_toStartOf="@id/clCard"
                app:layout_constraintTop_toBottomOf="@id/clCard" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etCvv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@drawable/search_stroke"
                android:cursorVisible="false"
                android:fontFamily="@font/bw_modelica_medium"
                android:hint="CVV"
                android:inputType="number"
                android:lineSpacingExtra="6sp"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/_111111"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintEnd_toEndOf="@id/clCard"
                app:layout_constraintStart_toEndOf="@id/etExpiry"
                app:layout_constraintTop_toBottomOf="@id/clCard" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etHolderName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/search_stroke"
                android:fontFamily="@font/bw_modelica_medium"
                android:hint="@string/card_holder_name"
                android:inputType="text"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/_111111"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/etExpiry" />

            <CheckBox
                android:id="@+id/checkBoxSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/bw_modelica"
                android:text="Save this for future purchases"
                android:textColor="@color/_404040"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintStart_toStartOf="@id/etHolderName"
                app:layout_constraintTop_toBottomOf="@+id/etHolderName" />

            <Button
                android:id="@+id/btnAddCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/search_stroke"
                android:fontFamily="@font/bw_modelica_medium"
                android:letterSpacing="0.0"
                android:onClick="@{model::onClick}"
                android:padding="@dimen/_7sdp"
                android:text="Add Card"
                android:textAllCaps="false"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/checkBoxSave" />

            <ImageView
                android:id="@+id/ivShield"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:src="@drawable/ic_shield"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnAddCard" />

            <TextView
                android:id="@+id/tvSecure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/bw_modelica_bold"
                android:text="100% Secure data encryption"
                android:textColor="@color/_111111"
                android:textAllCaps="true"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivShield" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/bw_modelica"
                android:text="We guarantee security of every transaction"
                android:textColor="@color/_111111"
                android:gravity="center"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvSecure" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>